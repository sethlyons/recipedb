<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :difficulty %><br>
    <%= f.number_field :difficulty %>
  </div>
  <div class="field">
    <%= f.label :prep_time %><br>
    <%= f.time_select :prep_time %>
  <div class="field">
    <%= f.label :cook_time %><br>
    <%= f.time_select :cook_time %>
  </div>
  <div class="field">
    <%= f.label :ingredients -%><br>
    <%= select_tag(:ingredients, options_from_collection_for_select(Ingredient.all, :id, :name), :multiple => true) -%>
  </div>
  <div class="field">
    <%= f.label :steps %><br>
    <%= f.text_area :steps %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
